<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colo_blue_green">
        <ImageView
            android:id="@+id/noticeDetails_back"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back1"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择车位"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            tools:context=".activities.StallMessageActivity"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <com.example.smartcommunityapplication.SelectSeatView
                    android:layout_height="300dp"
                    android:layout_width="match_parent"
                    android:id="@+id/search_seat"
                    android:background="@drawable/stall_message_steaview_style"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/stall_message_steaview_style"
                    android:padding="10dp">
                    <TextView
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:background="@color/colorBlack"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="可选"/>
                    <TextView
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:background="@android:color/holo_red_light"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="已占"/>
                    <TextView
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:background="@color/green_car"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="已选"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_margin="20dp"
                android:layout_height="20dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:id="@+id/tv_result"/>
            <Button
                android:background="@drawable/datacardbuttonstyle"
                android:id="@+id/stallMessage_zhan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="占车位"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>