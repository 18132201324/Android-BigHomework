<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/shape_corner"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_shop_image"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/beiguo3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="15dp"
                    android:id="@+id/tv_shopname"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="店铺名称"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@null"
                    android:hint="店铺风景"
                    android:textColor="#ff6633" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_score"
                    android:background="@drawable/xx"></ImageView>

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:text="4.8"
                    android:textColor="@color/colorYellow"
                    android:textSize="22sp"></TextView>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_shopsCenery1"
            android:background="@drawable/beiguo2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1">

        </ImageView>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_shopsCenery2"
            android:background="@drawable/beiguo1"
            android:layout_marginLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1">
        </ImageView>
    </LinearLayout>


    </LinearLayout>
</LinearLayout>