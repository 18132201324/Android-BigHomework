<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colo_blue_green">
        <ImageView
            android:id="@+id/noticeDetails_back"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back1"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告详情"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/head"
        android:padding="10dp"
        android:background="@color/colorGray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/myselfpagefragmentlayoutstyle"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:padding="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:id="@+id/messageLayout1_faBuZhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/messageLayout1_img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/beiguo1"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/messageLayout1_Name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冯斐然"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <TextView
                android:id="@+id/messageLayout1_title"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/messageLayout1_faBuZhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您的软件18级5-8班午报还没有提交呦，赶快去提交吧！"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/messageLayout1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/messageLayout1_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/beiguo2"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/messageLayout1_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/beiguo2"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/messageLayout1_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/beiguo2"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <TextView
                android:id="@+id/messageLayout1_time"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11月26日 09:43"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>
        </RelativeLayout>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论内容"
            android:textColor="@color/colorBlack"/>
        <ListView
            android:id="@+id/noticDetails_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/myselfpagefragmentlayoutstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/noticeDetails_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:hint="发表"
                android:background="@color/colo_blue_green"/>
            <EditText
                android:id="@+id/noticeDetails_comment"
                android:layout_toLeftOf="@+id/noticeDetails_btn"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="发表评论"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>