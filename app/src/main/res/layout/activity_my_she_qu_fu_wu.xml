<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/RunOrder_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@color/colo_blue_green">
        <ImageView
            android:id="@+id/RunOrder_back"
            android:onClick="onClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/mySheQuFuWu_xiaoQuListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区列表"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/colorBlack" />
        <LinearLayout
            android:layout_below="@id/mySheQuFuWu_xiaoQuListHeader"
            android:layout_width="400dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/tagtablesearchstyle">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="65dp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小区列表"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>
    <ListView
        android:padding="10dp"
        android:id="@+id/mySheQuFuWu_communityList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>