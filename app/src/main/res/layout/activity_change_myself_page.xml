<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colo_blue_green">
        <ImageView
            android:id="@+id/changeMyselfPage_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:onClick="onClicked"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户管理"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorGray">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:divider="@drawable/shape"
            android:showDividers="middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_toLeftOf="@+id/changeMyselfPage_touXiangMore"
                   android:background="@drawable/changmyselfpageimgstyle" />
                <ImageView
                    android:id="@+id/changeMyselfPage_touXiangMore"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/changeMyselfPage_nickName"
                    android:layout_toLeftOf="@+id/changeMyselfPage_nickNameMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/changeMyselfPage_nickNameMore"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/changeMyselfPage_passwordMore"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改手机号"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/changeMyselfPage_phone"
                    android:layout_toLeftOf="@+id/changeMyselfPage_phoneMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/changeMyselfPage_phoneMore"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的银行卡"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的邮箱"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape"
            android:showDividers="middle"
            android:orientation="vertical">
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的邮箱"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统设置"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/signoutbuttonstyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>