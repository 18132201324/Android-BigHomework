<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:paddingVertical="5dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/forth_tv_chattingHomeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2020-11-27 15:53:48"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:visibility="gone"
            android:id="@+id/forth_iv_chattingHomePhoto"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/holo_red_light"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/forth_tv_chattingHomeContent"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical|left"
            android:text="你好啊"
            android:background="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="10dp"
            android:maxWidth="230dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/forth_iv_chattingHomePhoto1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/holo_red_light"
            android:layout_alignParentRight="true"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/forth_tv_chattingHomeContent1"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_toLeftOf="@+id/forth_iv_chattingHomePhoto1"
            android:gravity="center_vertical|left"
            android:text="你好啊"
            android:paddingHorizontal="10dp"
            android:background="@android:color/holo_green_light"
            android:layout_marginRight="10dp"
            android:maxWidth="230dp"/>
    </RelativeLayout>
</LinearLayout>