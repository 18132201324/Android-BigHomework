<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@drawable/myselfpagefragmentlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/orderRun_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/c"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/orderRun_Lino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："/>
            <TextView
                android:id="@+id/orderRun_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3306"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/orderRun_fenGeXian"
            android:layout_below="@+id/orderRun_Lino"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/orderRun_title"
            android:layout_below="@id/orderRun_fenGeXian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接送孩子"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_below="@+id/orderRun_fenGeXian"
            android:layout_marginTop="10dp"
            android:id="@+id/orderRun_message"
            android:layout_toRightOf="@id/orderRun_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单类型："
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/orderRun_orderType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跑腿"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/orderRun_orderStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-12—3"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间："
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/orderRun_orderStopTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-12—3"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/orderRun_image"
            android:layout_below="@id/orderRun_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/orderRun_cotent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱钱"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignBottom="@+id/orderRun_delete"
            android:layout_toLeftOf="@+id/orderRun_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格："
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/orderRun_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10"
                android:textSize="20sp"
                android:textColor="@color/colo_red"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/orderRun_delete"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="删除订单"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/order_run_delete_buttonstyle"/>
    </RelativeLayout>
</LinearLayout>