<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@drawable/myselfpagefragmentlayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:padding="15dp">
        <LinearLayout
            android:id="@+id/messageLayout1_faBuZhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/messageLayout1_img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/beiguo1"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/messageLayout1_Name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冯斐然"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <TextView
            android:id="@+id/messageLayout1_title"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/messageLayout1_faBuZhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的软件18级5-8班午报还没有提交呦，赶快去提交吧！"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/messageLayout1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/messageLayout1_img2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/beiguo2"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/messageLayout1_img3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/beiguo2"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/messageLayout1_img4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/beiguo2"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <TextView
            android:id="@+id/messageLayout1_time"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月26日 09:43"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:id="@+id/messageLayout1_menu"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/menu"/>
        <ImageView
            android:id="@+id/messageLayout1_bubble"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/messageLayout1_menu"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/talkbubble"/>
    </RelativeLayout>
</LinearLayout>