<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#DADADA"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="微信"
            android:textColor="@android:color/black"
            android:textSize="17sp" />
        <ImageButton
            android:id="@+id/forth_btn_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add"/>
        <ImageButton
            android:id="@+id/forth_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/forth_btn_extend"
            android:background="@android:drawable/ic_menu_search"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chat">

        <ListView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_chattingList"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>