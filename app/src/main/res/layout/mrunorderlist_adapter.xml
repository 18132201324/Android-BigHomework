<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/runOrderList_Img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/g"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/runOrderList_theme"
        android:layout_below="@+id/runOrderList_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有偿家教"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/runOrderList_Img"/>
    <TextView
        android:id="@+id/runOrderList_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布于2020-11-25"
        android:textColor="@color/colorBlack"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:id="@+id/runOrderList_LiContent"
        android:layout_toRightOf="@+id/runOrderList_Img"
        android:layout_below="@+id/runOrderList_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/runOrderList_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人在石家庄居住，我儿子上5年级，现在需要一位家教老师，有意愿者联系。联系方式......"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_toLeftOf="@+id/runOrderList_jieDan"
        android:layout_alignBottom="@+id/runOrderList_jieDan"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/runOrderList_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 20"
            android:textColor="@color/colo_red"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <Button
        android:id="@+id/runOrderList_jieDan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/runOrderList_LiContent"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="接单"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/order_run_delete_buttonstyle"/>
</RelativeLayout>